<mfp:adapter name="QRCodeWebLogin"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns:mfp="http://www.ibm.com/mfp/integration"
	xmlns:http="http://www.ibm.com/mfp/integration/http">

	<displayName>QRCodeWebLogin</displayName>
	<description>QRCodeWebLogin</description>

	<JAXRSApplicationClass>com.github.mfpdev.sample.qrcodeweblogin.QRCodeApplication</JAXRSApplicationClass>

	<property name="webURL" defaultValue="https://qrcodelogin.mybluemix.net"/>

	<securityCheckDefinition name="qrcode" class="com.github.mfpdev.sample.qrcodeweblogin.QRCodeWebLoginSecurityCheck">
		<property name="maxAttempts" defaultValue="3" displayName="How many attempts are allowed"/>
		<property name="blockedStateExpirationSec" defaultValue="10" displayName="How long before the client can try again (seconds)"/>
		<property name="successStateExpirationSec" defaultValue="60" displayName="How long is a successful state valid for (seconds)"/>
	</securityCheckDefinition>
</mfp:adapter>
